platform :ios, '8.0'
use_frameworks!

source 'https://github.com/CocoaPods/Specs.git'

target 'ShakerApp' do

    pod 'Kingfisher', :git => 'https://github.com/onevcat/Kingfisher', :branch => 'swift2.3'
    pod 'Alamofire', '~> 3.3'
    pod 'AlamofireObjectMapper', '~> 3.0'
    pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON', :branch => 'swift2'
    pod 'Fabric'
    pod 'Crashlytics'

end
